@model IEnumerable<WebAPI.Dto.RingDto>
@{
    ViewData["Title"] = "Rings";
}

<div class="text-center">

    @if(Model.Count() == 0)
    {
        <p>model is empty</p>
    }
    else
    {
        <table class="table table-striped table-dark ring-table">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Effect</th>
                    <th scope="col">How To Get</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var ring in Model)
                {
                    <tr>
                        <td scope="row">
                            <img src="@ring.ImageUrl" />
                        </td>
                        <td>@ring.Name</td>
                        <td>@ring.Effect</td>
                        <td>
                            <ul>
                                @foreach(var howToGet in ring.HowToGet)
                                {
                                    <li>@howToGet</li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }

    

</div>
